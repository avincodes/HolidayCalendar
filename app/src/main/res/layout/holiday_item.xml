<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewHoliday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        style="@style/Widget.Material3.CardView.Filled">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <RelativeLayout
                android:id="@+id/relativeLayoutDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/txtHolidayDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"/>

                <TextView
                    android:id="@+id/txtMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_below="@id/txtHolidayDate"/>

                <TextView
                    android:id="@+id/txtYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_below="@id/txtMonth"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txtHolidayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Holiday Title"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/relativeLayoutDate" />

            <TextView
                android:id="@+id/txtHolidayDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Holiday Description"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/relativeLayoutDate"
                android:layout_below="@id/txtHolidayTitle"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>